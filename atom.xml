---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}</link>
    

    {% for post in site.posts %}
      {% unless post.draft %}
      <item>
        <title>{{ post.title | xml_escape }}</title>
        <description type="html" xml:base="{{ site.url }}{{ post.url }}">{{ post.content | xml_escape }}</description>
        {% if post.summary %}
        <summary type="html">{{ post.summary | truncatewords: 31 | xml_escape }}</summary>
        {% elsif post.excerpt %}
        <summary type="html">{{ post.excerpt | truncatewords: 31 | xml_escape }}</summary>
        {% else %}
        <summary type="html">{{ post.content | truncatewords: 31 | xml_escape }}</summary>
        {% endif %}
        <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
        {% if post.modified %}<updated>{{ post.modified | date_to_xmlschema }}</updated>{% endif %}
        {% for author in site.data.authors %}
    	  {% if author[1].username == post.author %}
        <contributor><name>{{ author[1].name }}</name></contributor>   
        {% endif %}
        {% endfor %}
        <category term="{{ post.tags }}"/>
        <link>{{ site.url }}{{ post.url }}</link>
        <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      </item>
      {% endunless %}
    {% endfor %}
    
  </channel>
</rss>
